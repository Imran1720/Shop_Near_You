<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".Seller_Products_Add">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="8"
    >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FF5E00"
                android:gravity="center"
                android:text="DEAR SELLER ADD PRODUCTS HERE"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/propic"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_product"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD PRODUCT IMAGE"
            android:textSize="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FF5E00"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:textSize="1dp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#FF5E00"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="6"
        android:padding="5dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PRODUCT NAME"
            android:textColor="#FF5E00"
            android:id="@+id/prname"
            android:textColorHint="#FF5E00"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MAX COST"
            android:id="@+id/maxcost"
            android:textColorHint="#FF5E00"
            android:textColor="#FF5E00"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MIN COST"
            android:id="@+id/mincost"
            android:textColorHint="#FF5E00"
            android:textColor="#FF5E00"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NUMBER"
            android:id="@+id/number"
            android:textColorHint="#FF5E00"
            android:textColor="#FF5E00"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CATEGORY"
            android:id="@+id/cate"
            android:textColorHint="#FF5E00"
            android:textColor="#FF5E00"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ONE LINE DISCRIPTION"
            android:id="@+id/psdes"
            android:textColorHint="#FF5E00"
            android:textColor="#FF5E00"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LONG DISCRIPTION"
            android:id="@+id/ldes"
            android:textColorHint="#FF5E00"
            android:textColor="#FF5E00"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:id="@+id/pradd"
            android:layout_marginTop="10dp"
            android:background="@drawable/bb"
            android:layout_gravity="center"
            />
    </LinearLayout>


</LinearLayout>
    </ScrollView>

    </RelativeLayout>








</layout>